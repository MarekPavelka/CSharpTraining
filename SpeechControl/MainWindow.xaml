<Window x:Class="SpeechControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Speak" HorizontalAlignment="Left" Margin="10,374,0,0" VerticalAlignment="Top" Width="196" Height="39" Click="Speak_OnClick"/>
        <Button Content="Listen" HorizontalAlignment="Right" Margin="0,374,10,0" VerticalAlignment="Top" Width="196" Height="39" Click="Listen_OnClick"/>
        <TextBox x:Name="_inputText" HorizontalAlignment="Left" Height="359" Margin="10,10,0,0" TextWrapping="Wrap" Text="Hello!" VerticalAlignment="Top" Width="772"/>
    </Grid>
</Window>
